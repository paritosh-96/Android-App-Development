<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.educonf.educonftech.MainActivity"
    android:background="#4745ac">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:id="@+id/btNotification"
        android:onClick="onClick"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to check Location"
        android:id="@+id/button"
        android:onClick="onClick"
        android:layout_below="@+id/btNotification"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Email"
        android:id="@+id/btEmail"
        android:onClick="onClick"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send SMS"
        android:id="@+id/btSMS"
        android:onClick="onClick"
        android:layout_below="@+id/btEmail"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MISS ME!! CALL ME"
        android:id="@+id/btCall"
        android:onClick="onClick"
        android:layout_below="@+id/btSMS"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert Dailog"
        android:id="@+id/btAlert"
        android:layout_below="@+id/btCall"
        android:layout_alignLeft="@+id/btNotification"
        android:layout_alignStart="@+id/btNotification"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animation"
        android:id="@+id/btAnimation"
        android:layout_below="@+id/btAlert"
        android:layout_alignRight="@+id/btEmail"
        android:layout_alignEnd="@+id/btEmail"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recording"
        android:id="@+id/btRecording"
        android:layout_below="@+id/btAnimation"
        android:layout_alignLeft="@+id/btSMS"
        android:layout_alignStart="@+id/btSMS"
        android:onClick="onClick" />
</RelativeLayout>
